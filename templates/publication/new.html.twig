{% extends 'base.html.twig' %}

{% block title %}New Publication{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <h1>Create New Publication</h1>
                <p class="text-muted">Enter the details of the new publication to add to the library collection.</p>
            </div>
            <div class="col-md-4 text-md-end d-flex align-items-center justify-content-md-end">
                <a href="{{ path('app_publication_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        {{ include('publication/_form.html.twig') }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Publication Tips</h5>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0">
                            <li class="mb-2">Enter complete and accurate information for best cataloging</li>
                            <li class="mb-2">ISBN format: 13 digits without dashes (e.g., 9781234567890)</li>
                            <li class="mb-2">Upload clear images of book covers when available</li>
                            <li class="mb-2">For magazines or journals, include volume/issue numbers in the description</li>
                            <li>Add detailed description to help members find the publication</li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Publication Types</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <span class="badge bg-info p-2 d-block mb-2">Book</span>
                            <small class="text-muted">Novels, textbooks, reference books, etc.</small>
                        </div>
                        <div class="mb-3">
                            <span class="badge bg-info p-2 d-block mb-2">Magazine</span>
                            <small class="text-muted">Periodicals published weekly or monthly</small>
                        </div>
                        <div class="mb-3">
                            <span class="badge bg-info p-2 d-block mb-2">Journal</span>
                            <small class="text-muted">Academic or scholarly periodicals</small>
                        </div>
                        <div class="mb-3">
                            <span class="badge bg-info p-2 d-block mb-2">Newspaper</span>
                            <small class="text-muted">Daily or weekly news publications</small>
                        </div>
                        <div>
                            <span class="badge bg-info p-2 d-block mb-2">Other</span>
                            <small class="text-muted">Maps, manuscripts, audiobooks, etc.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}