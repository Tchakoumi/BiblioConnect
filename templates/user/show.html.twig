{% extends 'base.html.twig' %}

{% block title %}User Details - BiblioConnect{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">User Details</h1>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Back to list</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th class="w-25">ID</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-secondary">{{ role }}</span>
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>First Name</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th>Last Name</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
